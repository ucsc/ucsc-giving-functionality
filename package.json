{
  "name": "ucsc-giving-functionality-plugin",
  "version": "0.1.0",
  "description": "Custom functionality plugin for UCSC Giving site",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
		"release": "standard-version",
		"zip": "wp-scripts plugin-zip",
		"packages-update": "wp-scripts packages-update"
	},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ucsc/ucsc-giving-functionality-plugin.git"
  },
  "keywords": [
    "wordpress",
    "plugin"
  ],
  "author": "UC Santa Cruz",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ucsc/ucsc-giving-functionality-plugin/issues"
  },
  "homepage": "https://github.com/ucsc/ucsc-giving-functionality-plugin#readme",
  "devDependencies": {
    "@wordpress/scripts": "^30.12.0",
    "standard-version": "^9.5.0"
  },
	"files": [
		"lib",
		"plugin.php",
		"README.md",
		"CHANGELOG.md",
		"LICENSE"
	],
	"standard-version": {
		"bumpFiles": [
			{
				"filename": "package-lock.json",
				"type": "json"
			},
			{
				"filename": "package.json",
				"type": "json"
			},
			{
				"filename": "plugin.php",
				"updater": "wp-plugin-version-updater.js"
			}
		]
	}
}
